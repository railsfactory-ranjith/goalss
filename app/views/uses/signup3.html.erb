<div id="container">
<div class="signup1">Create Grouphopper Account</div>
<div class="down_arrow"><img alt="down_arrow" src="images/down_arrow.jpg"></div>
<div class="clear"><!-- --></div>

<% form_for :user, :url => rpx_users_create_path do  -%>
<!-- left sign div start here-->
<div class="left_sign">
<div class="inne_right_account">
<div class="inne_label"><span class="star">*</span>Email address</div>
<%= text_field :user, :email, :class=>"inner_field", :maxlength=>100, :onkeyup=>"return ismaxlength(this)" , :value=>"#{@user.email}"%>
<div class="error_msg"><%= error_message_on "user", "email" %></div>
<div class="error_msg"><%= flash[:error]%></div>
<div class="clear"><!-- --></div>
<div class="inne_label"><span class="star">*</span>Re-Enter Email Address </div>
<input type="text" name="user[email1]" class="inner_field", maxlength="100", onkeyup="return ismaxlength(this)", value="<%=@user.email%>"/>
<div class="clear"><!-- --></div>
<div class="inne_label"><span class="star">*</span>First Name </div>
<%= text_field:user_profile,:first_name, :class=>"inner_field", :maxlength=>40, :onkeyup=>"return ismaxlength(this)" %>
<div class="error_msg"><%= error_message_on "user_profile", "first_name" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label"><span class="star">*</span> Last Name </div>
<%= text_field :user_profile, :last_name, :class=>"inner_field", :maxlength=>40, :onkeyup=>"return ismaxlength(this)" %>
<div class="error_msg"><%= error_message_on "user_profile", "last_name" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label"><span class="star" style="visibility:hidden">*</span>Username </div>
<%= text_field :user,:user_name, :class=>"inner_field" , :maxlength=>10, :onkeyup=>"return ismaxlength(this)"%>
<div class="error_msg"><%= error_message_on "user", "user_name" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label"><span class="star">*</span>Password</div>
<%= password_field :user,:password, :class=>"inner_field" , :maxlength=>32, :onkeyup=>"return ismaxlength(this)"%>
<div class="error_msg"><%= error_message_on "user", "password" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label"><span class="star">*</span>Re-enter Password </div>
<%= password_field :user,:password_confirmation, :class=>"inner_field", :maxlength=>32, :onkeyup=>"return ismaxlength(this)" %>
<div class="error_msg"><%= error_message_on "user", "password_confirmation" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label"><span class="star">*</span> PostalCode </div>
<%= text_field :user_profile,:zipcode, :class=>"inner_field", :maxlength=>10, :onkeyup=>"return ismaxlength(this)"%>
<div class="error_msg"><%= error_message_on "user_profile", "zipcode" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label"><span class="star">*</span>Country </div>
<% list_country%>
<%= select :user_profile, :country, @country,{:prompt=>"-select-"},:class=>"inner_field" %>
<div class="error_msg"><%= error_message_on "user_profile", "country" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label"><span class="star">*</span> Use</div>
<%= select :user_profile, :demographic_id, Demographic.all.collect {|p| [ p.name, p.id ] }, {:prompt=>"-select-"}, :class=>"inner_field" %>
 <div class="error_msg"><%= error_message_on "user_profile", "demographic_id" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label"><span class="star">*</span>Enter your gender</div>
<select name="user_profile[gender]" class="inner_field"><option value ="">-select-</option><option value="1">Male</option><option value="0">Female</option></select>
<div class="error_msg"> <%= error_message_on "user_profile", "gender" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label"><span class="star">*</span> Date of Birth</div>
<%if params[:date] && params[:date][:month]%>
<%=select("date","month",Date::MONTHNAMES.compact, {:prompt=>"#{params[:date][:month]}"}, :class=>"inner_birth" )%>
<%else%>
<%=select("date","month",Date::MONTHNAMES.compact, {:prompt=>"-month-"}, :class=>"inner_birth" )%>
<%end%>
<%if params[:date] && params[:date][:day]%>
<%=select("date","day", (1..31).entries, {:prompt=>"#{params[:date][:day]}"},:class=>"inner_birth" )%>
<%else%>
<%=select("date","day", (1..31).entries, {:prompt=>"-day-"},:class=>"inner_birth" )%>
<%end%>
<%if params[:date] && params[:date][:year] %>
<%=select("date","year",(1920..Time.now.year).entries, {:prompt=>"#{params[:date][:year]}"}, :class=>"inner_birth" )%>
<%else%>
<%=select("date","year",(1920..Time.now.year).entries, {:prompt=>"-year-"}, :class=>"inner_birth" )%>
<%end%>
<div class="error_msg"><%= flash.now[:dob_error] %></div>
</div>
<!-- left sign div ends here-->

<!-- right sign div strat here-->
<div class="right_sign">
<div class="inform">The information below is optional and can entered later</div>

<div class="clear"><!-- --></div>
<div class="inne_right_account">
<div class="inne_label">Picture:</div>
<!--<input type="file" size="27" class="inner_field_browse" name="">-->
<%= file_field :attachment,:uploaded_data, :size=>"27", :class=>"inner_field_browse" %>
<div class="clear"><!-- --></div>
<div class="inne_label">Organization: </div>
<%= text_field :user_profile,:organization, :class=>"inner_field" , :maxlength=>50%>
<div class="error_msg"><%= error_message_on "user_profile", "organization" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label">Occupation/Title: </div>
<%= text_field :user_profile,:occupation,:class=>"inner_field", :maxlength=>50%>
<div class="error_msg"><%= error_message_on "user_profile", "occupation" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label">Office Email Address: </div>
<%= text_field :user_profile,:office_email_address, :class=>"inner_field", :maxlength=>100%>
<div class="error_msg"><%= error_message_on "user_profile", "office_email_address" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label">Personal Email Address: </div>
<%= text_field :user_profile,:personal_email_address, :class=>"inner_field", :maxlength=>100%>
<div class="error_msg"><%= error_message_on "user_profile", "office_email_address" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label">Mobile Phone: </div>
<%= text_field :user_profile,:mobile_phone, :class=>"inner_field", :maxlength=>100%>
<div class="error_msg"><%= error_message_on "user_profile", "mobile_phone" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label">Office Phone:</div>
<%= text_field :user_profile,:office_phone, :class=>"inner_field", :maxlength=>20%>
<div class="error_msg"><%= error_message_on "user_profile", "office_phone" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label">Yahoo ID:</div>
<%= text_field :user_profile,:yahoo_id, :class=>"inner_field", :maxlength=>20%>
<div class="error_msg"><%= error_message_on "user_profile", "yahoo_id" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label">Windows Live ID:</div>
<%= text_field :user_profile,:windows_live_id, :class=>"inner_field", :maxlength=>50%>
<div class="error_msg"><%= error_message_on "user_profile", "windows_live_id" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label">AIM ID:</div>
<%= text_field :user_profile,:aim_id, :class=>"inner_field", :maxlength=>50%>
<div class="error_msg"><%= error_message_on "user_profile", "aim_id" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label">Skype ID:</div>
<%= text_field :user_profile,:skype_id, :class=>"inner_field", :maxlength=>50%>
<div class="error_msg"><%= error_message_on "user_profile", "skype_id" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label">Mailing Address 1:</div>
<%= text_field :user_profile,:mailing_address1,:class=>"inner_field", :maxlength=>50%>
<div class="error_msg"><%= error_message_on "user_profile", "mailing_address1" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label">Mailing Address 2:</div>
<%= text_field :user_profile,:mailing_address2, :class=>"inner_field", :maxlength=>50%>
<div class="error_msg"><%= error_message_on "user_profile", "mailing_address2" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label">City:</div>
<input type="text" class="inner_field" name="city" , maxlength="50">
<div class="error_msg"><%= error_message_on "user_profile", "city" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label">State:</div>
<%= text_field :user_profile,:state, :class=>"inner_field" , :maxlength=>50%>
<div class="error_msg"><%= error_message_on "user_profile", "state" %></div>
<div class="clear"><!-- --></div>
<div class="inne_label">Other Info:</div>
<%= text_field :user_profile,:other_info, :class=>"inner_field"%>
<input type="hidden" , name="id", value="<%=@user.id%>">
<div class="clear"><!-- --></div>
<!--<div class="sign_up"><a href="#"><img alt="sign up" src="images/signup1.jpg"></a></div>-->
<button class="sign_up" style="float:right;margin-right:113px;margin-top:28px;"><img alt="sign up" src="/images/signup1.jpg"></button>
</div>
</div>
<div class="clear"><!-- --></div>
<!-- right sign div ends here-->
<%end%>