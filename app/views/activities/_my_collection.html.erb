<div id="<%=i%>comment<%=j%>"><pre><%=h truncate(com.content,60)%></pre>
<%if com.content.length>60%>
<%= link_to_remote "More" ,{:url => {:action =>'expand_comment', :id =>com.id,:div=>"#{i}comment#{j}"}},:style=>"color:#FF7800;"%>
<%end%>
<div class="attachment">
<%=comment_attachment(com)%>
</div>
</div>
<div class="clear"></div>
<div class="hours1"><%=user_time_format(com.created_at)%></div>
</div>
<div class="clear"></div>
<%end%>
<%end%>

