<div class="left_squaer_img1"><%=user_image(current_user)%></div>

<div class="sub_content1"><% if collection.message.group.nil? %>
<% else %><img alt="icon" src="/images/icon.png"/><a href="<%=group_updates_path(:id=>collection.message.group.id)%>"><%=h truncate(collection.message.group.name,20)%></a> <a style="text-decoration: none;" href="#"> :&nbsp;</a><% end %>
 <%collection.message.message_users.each do |m|%>
<a href="<%=user_activity_link(m.user.id)%>"><%=h full_name(m.user)%></a>,
<%end%>
<br />
Subject: <%=h collection.message.subject%> <%= link_to "Read",edit_message_path(:id=>collection.message.id),:style=>"float:right;" %>
<p><pre><%=h wrap_text(truncate(collection.message.message,150),60)%></pre></p>
</div>
<div class="hours1"><%=user_time_format(collection.message.created_at)%></div>
<%unless collection.message.attachments.empty?%>
<%if collection.message.attachments.count>1%>
<div class="attachment"><a href="/messages/attachment?id=<%=collection.message.id%>" id="att<%=i%>">Attachment(s)</a><a class="arrow_bg" href="#"><img alt="arrow" src="/images/arrow.png"/></a><script>new Control.Modal($("att<%=i%>"), {className:'modal_container'})</script></div>
<%else%>
<div class="attachment"><%=link_to collection.message.attachments[0].filename,download_file_activities_path(:id=>collection.message.attachments[0].id)%></a></div><%end%>
<%end%>
</div>

