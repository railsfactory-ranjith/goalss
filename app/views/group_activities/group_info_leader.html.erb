<%= javascript_include_tag :defaults %>
<%=calendar_date_select_includes "gfblue" %>

<div class="signup1">New Activity (x)
  <a href="#">Mark new activity as read</a>
</div>
<div class="group_bg">
  <div class="group_img"><img alt="img" src="/images/img1.jpg"/></div>
  <%#=render :partial=>"status_update"%>
</div>
<div class="create_group_form">
  <div class="my_activity_left_container">
    <div class="goal_container"><%=h @group.name%></div>
    <div class="goal_description_container">
      <div class="goal"><%=h wrap_text(@group.description,44)%></div>
        <div class="icon_containr">
          <div class="byes"><a href="#"><img alt="byes" src="/images/byes.jpg"/></a></div>
          <div class="byes_content"><a href="#">Suspend Group</a></div>
          <div class="byes"><a href="#"><img alt="pencil" src="/images/pencil.jpg"/></a></div>
        </div>
      <div class="due_date">Due: <%=h @group.due_date.strftime("%m/%d/%Y")%></div>
    </div>
    <div class="goal_container">
      <div class="objective">Objectives</div>
      <div class="add_btn"><a href="#"><img alt="add" src="/images/add.jpg"/></a></div>
      <div class="add_con"><a href="#">Add New Objective</a></div>
      <div class="title_form_container">
        
      </div>
      <%for obj in @group.objectives%>
        <div class="objective_details_container" style="margin-top: 2px;">
        <div class="objective_con"><strong><%=h wrap_text(obj.title,44)%></strong></div>
        <div class="pencil_btn"><a href="<%=edit_group_activities_path(:id=>obj.id)%>"><img alt="pencil" src="/images/pencil.png"/></a></div>
        <div class="minus_btn"><a href="#"><img alt="minus" src="/images/minus_btn.jpg"/></a></div>
        <div class="objective_con"><%=h wrap_text(obj.description,44)%></div>
        <%if obj.due_date.nil?%>
        <%date="No"%>
        <%else%>
        <%date=obj.due_date.strftime("%m/%d/%Y")%>
        <%end%>
        <div class="objective_con"><strong>Due:</strong><%=h date%>
          <span style="margin-left: 30px;">Owner(s):</span>
          <a href="#">First Name, </a>
          <a href="#">Lastname,</a>
          <a href="#">Owner2,</a>
          <a href="#">Owner3,</a>
          <a href="#">Owner4</a>
        </div>
      </div>
      <%end%>
    <div class="pagenation_container">
      <ul>
        <li><a href="#">Previous </a></li>
        <li><a href="#">Next </a></li>
        <li><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
      </ul>
    </div>
  </div>
</div>
  <div class="my_activity_right_container">
    <div class="right_header">Group members</div>
    <div class="down_arrow"><img alt="down_arrow" src="/images/down_arrow.jpg"/></div>
    <div class="right_list">
    <div class="arrow_list" style="background: transparent url(/images/green_arrow.jpg) no-repeat scroll left 50%; -moz-background-clip: -moz-initial; -moz-background-origin: -moz-initial; -moz-background-inline-policy: -moz-initial;">Leader:<a href="#">Samuel Jackson</a></div>
  </div>
  <div class="clear"></div>
  <div class="right_list">
    <div class="arrow_list"><a href="#">Harry Zaplin</a></div>
  </div>
  <div class="clear"></div>
  <div class="clear"></div>
</div>
  <div class="footer_menu_bg" style="margin-top: 5px;"></div>
  <div class="footer_left" style="margin-top: 5px;"><img alt="footer_right" src="/images/footer_right.jpg"/></div>
</div>