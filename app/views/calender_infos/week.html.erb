												<div class="abip"><%=truncate_text_val(obj.title)%></div>
												<div class="abip"><a href="<%=profile_thirdparty_user_path(:id=>obj.responsible_members[0].user_id) unless obj.responsible_members.empty?%>"><% if !obj.responsible_members.empty?%>
												<%=h truncate(full_name(obj.responsible_members[0].user),20)%>s
												<%end%></a></div>
												</div>
								<%end%>
                <div class="abip"><span id="modal"><%=link_to "More" ,{:action => "more_info" ,:year =>@year,:month =>@month,:date => cur.day},:id => "cal_day_#{cur.day}",:style =>"font-size: 11px;"%></span>
								<script>
											new Control.Modal($('cal_day_<%=cur.day%>'), {className:'modal_container',width: 0,height: 0})
								</script></div>
         </div>
			 
			   <% else %>
        
			 			 <div class="monday_week">
