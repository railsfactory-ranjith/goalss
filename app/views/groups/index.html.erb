<div id="container">
  <div class="signup1">Create Group</div>
  <div class="down_arrow"><img src="/images/down_arrow.jpg" alt="down_arrow" /></div>
  <div class="clear"><!-- --></div>
  <!-- thumbnail image container div start here-->
  <div class="group_bg">
    <div class="group_img"><img src="/images/img1.jpg" alt="img" /></div>
    <div class="group_mid_white"></div>
    <button class="select_group"><img src="/images/select_group.jpg" alt="selct" /></button><br />
    <br />
  </div>
  <!-- thumbnail image container div ends here-->
  <!-- create group container div staryt here-->
  <div class="invite_people_left">
    <div class="invite_header">Group Info</div>
    <p><font color="red"><%=flash[:error]%></font></p>
    <%if flash[:notice] %>
      <p><font color="green"><%= flash[:notice] %></font></p>
    <%end%>
    
    
    <div class="recipient_form">
      <div class="inne_label">Goal:</div>
      <div class="new_group"><%=@group.description%></div>
      <div class="clear"><!-- --> </div>
      <div class="inne_label">Due:</div>
      <div class="new_group">
        <% if @group.due_date %>
          <%=@group.due_date.strftime("%m/%d/%Y")%>
        <%else%>
          No 
        <%end%>
      </div>
      <div class="inne_label" style="border: medium none ; visibility: hidden;">Due Date:</div>
      <div class="clear"></div>
      <%count=0%>
      <% unless @objectives.nil?%>
        <% for objective in @objectives %>
        <%count+=1%>
          <div class="inne_label" style="margin-top: 30px;">Objective<%=count%>:</div>
          <div class="new_group" style="margin-top: 30px;"><%=objective.title%></div>
          <div class="clear"></div>
          <div class="inne_label">Description:</div>
          <div class="new_group"><%=objective.description%></div>
           <div class="clear"><!-- --> </div>
          <div class="inne_label">Due Date:</div>
          <div class="new_group">
             <% if objective.due_date %>
                <%=objective.due_date.strftime("%m/%d/%Y")%>
              <%else%>
                No 
              <%end%>
          </div>
          <div class="clear"></div>
        <%end%>
      <%end%>
      <div class="inne_label" style="border: medium none ; visibility: hidden;">Due Date:</div>

    </div>
    </div>
    <div class="invite_people_right">
      <div class="invite_header">Invited members</div>
        <div class="recipient_form">
          <div class="inne_label">Invitation Message:</div>
          <div class="new_group_right"><%=@message%></div>
           <div class="clear"><!-- --> </div>
          <div class="inne_label">Invited:</div>
          <div class="new_group_right">
            <% if !@invitations.nil? %>
              <%for invitation in @invitations %>
                <div class="new_group_right"><%=invitation.email%></div>
              <%end%>
            <%end%>
             <div class="inne_label" style="border: medium none ; visibility: hidden;">Invited:</div>

          </div>
                  <div class="clear"><!-- --></div>
        </div>
            </div>
        <div class="button_container" style="margin-top: 30px;">
          <%=link_to image_tag("cancel.jpg"),edit_user_path(:id=>current_user.id)%>
        </div>

    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
  